extends layout

block content
  #modalJoinGame.modal.fade
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal")
            span(aria-hidden="true") &times;
            span.sr-only= __('global.close')
          h4.modal-title(data-title="#{__('modalJoinGame.title')}")
            = __('modalJoinGame.defaultTitle')
        .modal-body
          p.error.text-danger.well.hidden
          form.form-inline(role="form")
            .form-group.form-group-lg
              label.sr-only(for="pseudoJoinGame")= __('modalJoinGame.pseudo')
              input.form-control(type="text", id="pseudoJoinGame" name="pseudo" value="", 
                required="required", size="30", maxlength="50", placeholder="#{__('modalJoinGame.pseudo')}")
        .modal-footer
          button.btn.btn-primary.submit(type="button")= __('modalJoinGame.submit')
          button.btn.btn-default(type="button", data-dismiss="modal")= __('global.cancel')

  #main.container
    header#headerStart
      h1= __('app.name')
    .row
      section.col-sm-6#newGame
        h3= __('startPage.newGame.title')
        p.error.text-danger.well.hidden
        form.form-horizontal.container-fluid(role="form")
          .form-group
            label.control-label.col-sm-4(for="gameName")= __('startPage.newGame.inputGameName')
            div.col-sm-8
              input.form-control(type="text", id="gameName" name="gameName" value="", 
                required="required", maxlength="50", autofocus="autofocus")
          .form-group
            label.control-label.col-sm-4(for="pseudoNewGame")= __('startPage.newGame.inputPseudo')
            div.col-sm-8
              input.form-control(type="text", id="pseudoNewGame" name="pseudo" value="",
                required="required", maxlength="50")
          .form-group
            div.col-sm-offset-4.col-sm-8
              button.btn.btn-primary(type="submit")= __('startPage.newGame.inputSubmit')
      
      section.col-sm-6#joinGame
        h3= __('startPage.joinGame.title')
        p.loading: i.fa.fa-circle-o-notch.fa-spin
        p.well.noGame.hidden= __('startPage.joinGame.noGame')
        ul.list-unstyled
          li.active.hidden
            a.bg-info(href="#", data-gameName="")
          li.inactive.hidden
            div.bg-danger(data-gameName="")
              span.gameName
              = ' '
              strong= __('startPage.joinGame.fullGame')
