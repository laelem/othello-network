#main
  margin-top 40px
  text-align center
  header
    border-bottom 1px solid #ddd
    padding-bottom 20px
    margin-bottom 40px
  h2
    font-size 14px
    margin 0
  h3
    margin-top 0
    margin-bottom 25px

#newGame form
  text-align left
  
#joinGame 
  .loading i
    font-size 25px
  ul
    max-height 300px
    overflow auto
  li
    margin-bottom 10px
    a
      display block
      vertical-align middle
      text-align center
      padding 10px 0
      color black
      &:hover
        background-color $brand-info
        text-decoration none;

#modalJoinGame
  text-align center
  .modal-footer
    text-align center

#gameboard
  [role="row"]
    line-height 10px
    &:first-child
      [role="case"]
        border-top 1px solid white
  [role="case"]
    display inline-block
    width 39px
    height 39px
    background-color green
    border-bottom 1px solid white
    border-right 1px solid white
    &:first-child
      border-left 1px solid white
  [role="piece"]
    display inline-block
    width 29px
    height 29px
    margin 5px auto
    border-radius 15px
    &[data-color="white"]
      background-color white
      border 1px solid black
    &[data-color="black"]
      background-color black
      border 1px solid white

#tchat
  text-align left
  ul
    border 1px solid darkgrey
    height 255px
    overflow-y auto
    padding 10px
  textarea
    width 100%

#data
  text-align right